{
  "compilerOptions": {
    "declaration": true,
    "module": "CommonJS",
    "outFile": "build/types.d.ts",
    "target": "ES2021",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": ["scripts"],
  "include": ["src"]
}
